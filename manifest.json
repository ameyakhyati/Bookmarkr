{
	"name": "Bookmarkr",
	"version": "1.0",
	"description": "A simple extension to bookmark timestamps in youtube videos.",
	"permissions": ["storage", "tabs"],
	"host_permissions": ["https://*.youtube.com/*"],

	"background": {
		"service_worker": "background.js"
	},

	"content_scripts": [
		{
			"matches": ["https://*.youtube.com/*"],
			"js": ["contentScript.js"]
		}
	],

	"action": {
		"default_popup": "popup/popup.html",
		"default_title": "Bookmarkr",
		"default_icon": {
			"32": "assets/extension-icon.png"
		}
	},

	"web_accessible_resources": [
		{
			"resources": [
				"assets/bookmark.png",
				"assets/play.png",
				"assets/delete.png",
				"assets/save.png"
			],
			"matches": ["https://*.youtube.com/*"]
		}
	],

	"manifest_version": 3
}
